<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!-- ========== MASHE'S ASHLANDS ========== -->
    
    <!-- Nix-Ox Chitin (Leathery → Leathery + Chitin) -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Mashed_Ashlands_NixOxChitin"]/stuffProps/categories</xpath>
        <value>
            <li>MorrowRim_Chitin</li>
        </value>
    </Operation>
    
    <!-- Shalk Chitin (Leathery → Leathery + Chitin) -->
